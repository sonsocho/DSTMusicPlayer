<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Phần đầu của giao diện -->

        <!-- Grid layout cho các mục bo tròn -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_gravity="center"/>

        <!-- Phần khác của giao diện có thể tiếp tục ở đây -->


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Phần đầu của giao diện -->

                <!-- Grid layout cho các mục bo tròn -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:layout_gravity="center">

                    <!-- Mục 1: Được phát nhiều nhất -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="4dp">

                        <!-- Layer ảnh và text -->
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <!-- Ảnh nền làm mờ -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/logo"
                                />


                            <!-- Text được đặt lên trên ảnh -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="start|bottom"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Được phát nhiều nhất"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 Bài hát"
                                    android:textSize="12sp"
                                    android:textColor="@color/white" />
                            </LinearLayout>
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Mục 2: Được thêm sau cùng -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="4dp">

                        <!-- Layer ảnh và text -->
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <!-- Ảnh nền làm mờ -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/logo"
                                />


                            <!-- Text được đặt lên trên ảnh -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="start|bottom"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Được thêm sau cùng"
                                    android:textSize="16sp"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 Bài hát"
                                    android:textSize="12sp"
                                    android:textColor="@color/white" />
                            </LinearLayout>
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Mục 3: Phát gần đây -->

                    <!-- Mục 4: Yêu thích -->

                </GridLayout>

                <!-- Phần khác của giao diện có thể tiếp tục ở đây -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Đề xuất"
                    android:textSize="24sp"
                    android:layout_marginTop="16dp" />

        </LinearLayout>
        <!-- Hiển thị danh sách bài hát nghe gần đây -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- Một bài hát mẫu (dạng Clickable) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <!-- Ảnh bìa bên trái -->
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/logo"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="16dp" />

                <!-- Tên bài hát và thông tin khác -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Tên bài hát -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên bài hát"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <!-- Nghệ sĩ và thời gian -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nghệ sĩ • 3:45"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>

                <!-- Icon Play bên phải -->
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/baseline_play_circle_filled_24"
                    app:tint="@android:color/black" />


            </LinearLayout>

            <!-- Tương tự, thêm nhiều bài hát theo cách này -->
        </LinearLayout>


        <!-- Icon play bên phải -->
    </LinearLayout>
</androidx.core.widget.NestedScrollView>