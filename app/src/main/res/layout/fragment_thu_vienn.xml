<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ThuViennFragment"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Phần đầu của giao diện -->

        <!-- Grid layout cho các mục bo tròn -->

        <!-- Phần khác của giao diện có thể tiếp tục ở đây -->


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thư Viện"
            android:textSize="48sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Phần đầu của giao diện -->

            <!-- Grid layout cho các mục bo tròn -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="2"
                android:rowCount="2">

                <!-- Mục 1: Được phát nhiều nhất -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="4dp">

                    <!-- Layer ảnh và text -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Ảnh nền làm mờ -->
                        <ImageView
                            android:id="@+id/tatCaBaiHat"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/turntable_retro_vintage_197352_3840x2160" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.5"
                            android:background="@android:color/black" />

                        <!-- Text được đặt lên trên ảnh -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="start|bottom"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tất Cả Bài Hát"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/PhatTatCa"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginRight="8dp"
                                android:src="@drawable/baseline_play_circle_filled_24"
                                app:tint="@color/white" />

                        </LinearLayout>
                    </FrameLayout>
                </androidx.cardview.widget.CardView>

                <!-- Mục 2: Được thêm sau cùng -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="4dp">

                    <!-- Layer ảnh và text -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Ảnh nền làm mờ -->
                        <ImageView
                            android:id="@+id/album"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/piano_keys_macro_200071_3840x2160" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.5"
                            android:background="@android:color/black" />

                        <!-- Text được đặt lên trên ảnh -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="start|bottom"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Album"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/imageViewAlbum"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginRight="8dp"
                                android:src="@drawable/baseline_play_circle_filled_24"
                                app:tint="@color/white" />

                        </LinearLayout>
                    </FrameLayout>
                </androidx.cardview.widget.CardView>

                <!-- Mục 3: Phát gần đây -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="4dp">

                    <!-- Layer ảnh và text -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Ảnh nền làm mờ -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/vinyl_tonearm_cartridge_107810_3840x2160" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.5"
                            android:background="@android:color/black" />

                        <!-- Text được đặt lên trên ảnh -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="start|bottom"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Yêu thích"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/imageViewNgheSi"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginRight="8dp"
                                android:src="@drawable/baseline_play_circle_filled_24"
                                app:tint="@color/white" />

                        </LinearLayout>
                    </FrameLayout>
                </androidx.cardview.widget.CardView>
                <!-- Mục 4: Yêu thích -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="4dp">

                    <!-- Layer ảnh và text -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Ảnh nền làm mờ -->
                        <ImageView
                            android:id="@+id/nghesi"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/guitar_guitarist_musical_instrument_126078_3840x2160" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.5"
                            android:background="@android:color/black" />

                        <!-- Text được đặt lên trên ảnh -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="start|bottom"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nghệ sĩ"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginRight="8dp"
                                android:src="@drawable/baseline_play_circle_filled_24"
                                app:tint="@color/white" />


                        </LinearLayout>
                    </FrameLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>

            <!-- Phần khác của giao diện có thể tiếp tục ở đây -->

        </LinearLayout>
        <!-- Hiển thị danh sách bài hát nghe gần đây -->


        <!-- Icon play bên phải -->
    </LinearLayout>
</androidx.core.widget.NestedScrollView>